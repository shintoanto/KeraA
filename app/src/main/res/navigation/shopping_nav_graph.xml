<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/shopping_nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ecmerce.keraa.fragments.shopping_fragments.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_productDetilsFragment"
            app:destination="@id/productDetilsFragment" />
        <argument
            app:nullable="true"
            android:defaultValue="@null"
            android:name="products"
            app:argType="com.ecmerce.keraa.data.Product" />
    </fragment>
    <fragment
        android:id="@+id/productDetilsFragment"
        android:name="com.ecmerce.keraa.fragments.shopping_fragments.ProductDetilsFragment"
        android:label="fragment_product_detail"
        tools:layout="@layout/fragment_product_detail" />
</navigation>